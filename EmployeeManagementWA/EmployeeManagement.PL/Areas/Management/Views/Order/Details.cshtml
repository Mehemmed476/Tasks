@using EmployeeManagement.CORE.Models;
@model Order

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <span style="font-size: 2em;">Order - Details</span>
            <span class="float-right">
                <a type="button" class="btn btn-outline-dark" asp-area="Management" asp-controller="Order" asp-action="Index">
                    <i class="fa-solid fa-circle-arrow-left"></i> Go Back
                </a>
            </span>
        </h6>
    </div>
    <div class="card-body">
        <div class="card text-center">
            <div class="card-header">
                <h4 style="color: black;">Order ID: @Model.Id</h4>
                <a type="button" class="btn btn-primary mt-1 ml-2 mr-3"
                   asp-area="Management"
                   asp-action="Update"
                   asp-controller="Order"
                   asp-route-Id="@Model.Id">
                    <i class="fa-solid fa-pen-to-square"></i>
                </a>
                @if (!Model.IsDeleted)
                {
                    <a type="button" class="btn btn-warning mt-1 mr-3"
                       asp-area="Management"
                       asp-action="SoftDelete"
                       asp-controller="Order"
                       asp-route-Id="@Model.Id">
                        <i class="fa-sharp fa-solid fa-trash"></i>
                    </a>
                }
                else
                {
                    <a type="button" class="btn btn-dark mt-1 mr-3"
                       asp-area="Management"
                       asp-action="Restore"
                       asp-controller="Order"
                       asp-route-Id="@Model.Id">
                        <i class="fa-solid fa-rotate-left"></i>
                    </a>
                }
                <a type="button" class="btn btn-danger mt-1"
                   asp-area="Management"
                   asp-action="Delete"
                   asp-controller="Order"
                   asp-route-Id="@Model.Id">
                    <i class="fa-solid fa-delete-left"></i>
                </a>
            </div>
            <div class="card-body">
                <h5 class="card-title">Client Name: @Model.ClientName @Model.ClientSurName</h5>
                <h5 class="card-title">Phone Number: @Model.ClientPhoneNumber</h5>
                <h5 class="card-title">Email: @Model.ClientEmail</h5>
                <h5 class="card-title">Problem: @Model.Problem</h5>
                <h5 class="card-title">Service Type: @Model.Service?.Title</h5>
                <h5 class="card-title">Assigned Master: @Model.Master?.FirstName @Model.Master?.LastName</h5>
                <h5 class="card-title">Active: @Model.IsActive</h5>
                <p class="card-text">Created: @Model.CreatedDate</p>
                <p class="card-text">Modified: @Model.ModifiedDate</p>
                <p class="card-text">Is Deleted: @Model.IsDeleted</p>
                <p class="card-text">Deleted: @Model.DeletedDate</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
            <div class="card-footer text-muted">
                @(DateTime.Now - Model.CreatedDate)
            </div>
        </div>
    </div>
</div>
