@using EmployeeManagement.PL.Areas.Management.ViewModels;
@model OrderVM

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header">
                    <h4 class="card-title">Create Order</h4>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="Order.ClientName" class="control-label">Client Name</label>
                            <input asp-for="Order.ClientName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Order.ClientSurName" class="control-label">Client Surname</label>
                            <input asp-for="Order.ClientSurName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Order.ClientPhoneNumber" class="control-label">Phone Number</label>
                            <input asp-for="Order.ClientPhoneNumber" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Order.ClientEmail" class="control-label">Email</label>
                            <input asp-for="Order.ClientEmail" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Order.Problem" class="control-label">Problem Description</label>
                            <textarea asp-for="Order.Problem" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="Order.IsActive" class="control-label">Is Active</label>
                            <input asp-for="Order.IsActive" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Order.ServiceId" class="control-label">Select Service</label>
                            <select asp-for="Order.ServiceId" class="form-control">
                                <option value="">Select Service</option>
                                @foreach (var item in Model.Services)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Order.MasterId" class="control-label">Select Master</label>
                            <select asp-for="Order.MasterId" class="form-control">
                                <option value="">Select Master</option>
                                @foreach (var item in Model.Masters)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
